{
    "manifest_version": 3,
    "name": "Pipeline Visualization",
    "version": "1.0",
    "description": "Visualize pipelines directly in Chrome.",
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "https://api.yourcrm.com/*" 
    ],
    "web_accessible_resources": [{
      "resources": ["data.json"],
      "matches": ["<all_urls>"]
    }]
  }
  